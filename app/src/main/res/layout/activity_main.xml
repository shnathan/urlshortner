<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/longUrlEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a long URL"
        android:inputType="textUri" />

    <Button
        android:id="@+id/shortenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Short URL"
        android:layout_below="@+id/longUrlEditText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/shortUrlTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@+id/shortenButton"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/copyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy Short URL"
        android:layout_below="@+id/shortUrlTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
